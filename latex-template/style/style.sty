\newcommand{\EfficiencyGauge}[2]
{
    \begin{flushright}
        \begin{tikzpicture}
            \node[state] (absText) at (0,0.05cm) [draw=none, left] {\textcolor{gray!5}{Abstrakt}};
            \node[state] (effText) at (0,0.05cm) [draw=none, right of=absText, node distance=(#2)*0.5cm+1.3cm, right] {\textcolor{gray!5}{Effizient}};
            
            \draw[-] (0,0) -- (#2*0.5cm+0.5cm,0) [draw=gray!30, line width=1pt];
            
            \foreach \x in {0,...,#2}
                \draw[-] (\x*0.5cm+0.25cm,-0.25cm)  -- (\x*0.5cm+0.25cm,0.25cm) [draw=gray!30, line width=1pt];
            
            %\draw (#1*0.5cm+0.25cm,0) ellipse (0.15cm and 0.3cm) [line width=0, fill=blue!40, opacity=.4];
            \draw (#1*0.5cm+0.25cm,0) ellipse (0.15cm and 0.3cm) [line width=0, fill=yellow, opacity=.4];
            \draw (#1*0.5cm+0.25cm,0) ellipse (0.15cm and 0.3cm) [draw=yellow, line width=1];
            %\draw (#1*0.5cm+0.25cm,0) ellipse (0.15cm and 0.3cm) [draw=blue, line width=1];
        \end{tikzpicture}
    \end{flushright}
}

